{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Main Window with Demo Data",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/eo_man",
            "console": "integratedTerminal",
            "args": ["-v", "--app_config", "${workspaceFolder}/demo2.eodm"],
            "justMyCode": false
        },
        {
            "name": "Python: Main Window with PCT14 Data",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/eo_man",
            "console": "integratedTerminal",
            "args": ["-v", "--pct14_export", "${workspaceFolder}/tests/resources/20240925_PCT14_export_test.xml"],
            "justMyCode": false
        },
        {
            "name": "Python: Main Window",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/eo_man",
            "args": ["-v"],
            "console": "integratedTerminal",
            "justMyCode": false
        },
        {
            "name": "Python: Console Logger",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/eo_man",
            "args": ["-C", "enocean_logger", "-sp", "COM7", "-dt", "fam14", "--app_config", "${workspaceFolder}/tests/resources/20260108_logger_test.eodm", "--log_telegram_id_filter", "FE-D4-E9-47, FE-D4-E9-48, FE-D4-E9-49"],
            "console": "integratedTerminal",
            "justMyCode": false
        },
        {
            "name": "Python: Console Burst Test",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/eo_man",
            "args": ["-C", "burst_test", "-sp", "COM7", "-dt", "fam14", "-sp2", "COM11", "-dt2", "fgw14usb"],
            "console": "integratedTerminal",
            "justMyCode": false
        },
        {
            "name": "Python: CLI Help",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/eo_man",
            "console": "integratedTerminal",
            "args": ["-h"],
            "justMyCode": false
        },
        {
            "name": "Python: CLI load demo and store ha config",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/eo_man",
            "console": "integratedTerminal",
            "args": ["-C", "generate_ha_config", "-v", "--app_config", "${workspaceFolder}/demo.eodm", "--ha_config", "${workspaceFolder}/ha_config.yaml"],
            "justMyCode": true
        },
        {
            "name": "Python: Debug Tests",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "purpose": ["debug-test"],
            "console": "integratedTerminal",
            "justMyCode": false
          }
    ]
}